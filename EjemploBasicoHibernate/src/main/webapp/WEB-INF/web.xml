<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>EjemploBasicoHibernate</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Inicio</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.InicioServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Categorias</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.CategoriasServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Offices</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.OfficesServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Employees</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.EmployeesOfficeServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Customers</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.CustomersServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Orders</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.OrdersCustomersServlet</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Payments</servlet-name>
		<servlet-class>org.iesalixar.servidor.controller.PaymentsCustomersServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Inicio</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Categorias</servlet-name>
		<url-pattern>/Categorias</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Offices</servlet-name>
		<url-pattern>/Offices</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Employees</servlet-name>
		<url-pattern>/Employees</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Customers</servlet-name>
		<url-pattern>/Customers</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Orders</servlet-name>
		<url-pattern>/Orders</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Payments</servlet-name>
		<url-pattern>/Payments</url-pattern>
	</servlet-mapping>

</web-app>