<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		
		<property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
		<property name="connection.url">jdbc:mariadb://localhost:3336/classicmodels</property>		
		<property name="connection.username">root</property>
		<property name="connection.password">12345</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MariaDBDialect</property>
		<property name="hibernate.show_sql">true</property>

		<!-- MAPEOS -->
		<mapping class="org.iesalixar.servidor.model.ProductLine" />
		<mapping class="org.iesalixar.servidor.model.Product" />
		<mapping class="org.iesalixar.servidor.model.Offices" />
		<mapping class="org.iesalixar.servidor.model.Employees" />
		<mapping class="org.iesalixar.servidor.model.Customers" />
		<mapping class="org.iesalixar.servidor.model.Orders" />
		
	</session-factory>
</hibernate-configuration>